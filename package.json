{
  "name": "@notamans/create-node-express-starter",
  "version": "0.0.1",
  "description": "Node.js Express Starter",
  "license": "MIT",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "./node_modules/.bin/dotenvx run -- ts-node-dev --respawn --transpile-only --require tsconfig-paths/register src/server.ts",
    "lint": "eslint",
    "start": "./node_modules/.bin/dotenvx run -- node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "bin": {
    "create": "./cli.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.13.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.1",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.26.2",
    "express": "^4.21.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^7.2.0",
    "winston": "^3.17.0"
  }
}
