{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "controllers/*": ["src/controllers/*"],
      "errors/*": ["src/errors/*"],
      "middlewares/*": ["src/middlewares/*"],
      "routes/*": ["src/routes/*"],
      "services/*": ["src/services/*"],
      "utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
