{
  "compilerOptions": {
    "target": "ES2020", // Output modern JavaScript
    "module": "CommonJS", // CommonJS module system for Node.js
    "rootDir": "src", // Specify the root folder of your TypeScript files
    "outDir": "dist", // Output directory for compiled files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Allow default imports from CommonJS modules
    "resolveJsonModule": true, // Allow importing .json files
    "moduleResolution": "node", // Resolve modules in the Node.js style
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in imports
    "noImplicitAny": true, // Disallow `any` types unless explicitly defined
    "noUnusedLocals": true, // Warn on unused local variables
    "noUnusedParameters": true, // Warn on unused function parameters
    "noFallthroughCasesInSwitch": true // Disallow fallthrough in switch statements
  },
  "include": ["src/**/*.ts"], // Include TypeScript files in src
  "exclude": ["node_modules", "dist", "tests"] // Exclude unwanted directories
}
